<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple USSD"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a USSD command to execute:"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="16dp" />

    <!-- USSD Command Buttons -->
    <Button
        android:id="@+id/btn_ussd_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:padding="16dp"
        android:textSize="16sp"
        android:background="@drawable/button_primary"
        android:textColor="#FFFFFF"
        android:text="Check Balance" />

    <Button
        android:id="@+id/btn_ussd_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:padding="16dp"
        android:textSize="16sp"
        android:background="@drawable/button_primary"
        android:textColor="#FFFFFF"
        android:text="Check Data" />

    <Button
        android:id="@+id/btn_ussd_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:padding="16dp"
        android:textSize="16sp"
        android:background="@drawable/button_primary"
        android:textColor="#FFFFFF"
        android:text="Recharge" />

    <Button
        android:id="@+id/btn_ussd_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:padding="16dp"
        android:textSize="16sp"
        android:background="@drawable/button_primary"
        android:textColor="#FFFFFF"
        android:text="Customer Care" />

    <!-- Settings Button -->
    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:textSize="14sp"
        android:background="@drawable/button_secondary"
        android:textColor="#333333"
        android:text="Enable Accessibility Service" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Note: Enable accessibility service for automatic USSD handling"
        android:textSize="12sp"
        android:textColor="#999999"
        android:gravity="center" />

</LinearLayout>

