<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:radius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textWebhookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Webhook Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/textWebhookUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://example.com/webhook"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchWebhookEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:checked="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority:"
                android:textSize="12sp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/textWebhookPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#666"
                android:layout_marginStart="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Secret:"
                android:textSize="12sp"
                android:textColor="#666"
                android:layout_marginStart="12dp" />

            <TextView
                android:id="@+id/textWebhookSecret"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#666"
                android:layout_marginStart="4dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/buttonTestWebhook"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Test"
                android:textSize="12sp"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:minHeight="0dp"
                android:paddingHorizontal="8dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/buttonEditWebhook"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Edit"
                android:textSize="12sp"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                android:minHeight="0dp"
                android:paddingHorizontal="8dp"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/buttonDeleteWebhook"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Delete"
                android:textSize="12sp"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                android:minHeight="0dp"
                android:paddingHorizontal="8dp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>




